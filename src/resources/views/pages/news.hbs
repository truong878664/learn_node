<div class="mt-4">
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">title</th>
        <th scope="col">description</th>
        <th scope="col">link image</th>
        <th scope="col">create at</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each news}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.image}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <button class="btn btn-danger delete-new-btn" data-id="{{this._id}}">Xóa</button>
            <a href="" class="btn btn-primary">Sửa</a>
          </td>
        </tr>
      {{else}}
        <td colspan="6" class="text-center">
          Bạn chưa đăng tin tức nào.
          <a href="/news/upload" class="link-info">Đăng tin tức</a>
        </td>
      {{/each}}

    </tbody>
  </table>
  <form method="POST" id="delete-new-form"></form>
</div>

<script>
 window.onload = () => {
    $$('.delete-new-btn').forEach(element => {
      element.onclick = (e) => {
        const id = e.target.getAttribute("data-id");
        $('#delete-new-form').action = `/news/${id}/delete?_method=DELETE`;
        $('#delete-new-form').submit();
      } 
    })
  }
</script>